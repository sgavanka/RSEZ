<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Create Event"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="#ffff" />

    <EditText
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What's the occasion?"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:maxLines="1"
        android:theme="@style/MyEditText"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/redcarpet"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginHorizontal="18dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe it a little..."
        android:theme="@style/MyEditText"
        android:inputType="textMultiLine"
        android:drawablePadding="12dp"
        android:maxLines="5"
        android:maxLength="100"
        android:drawableLeft="@drawable/descriptionicon"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/event"
        android:layout_marginHorizontal="18dp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What day is it?"
        android:theme="@style/MyEditText"
        android:drawablePadding="12dp"
        android:focusable="false"
        android:drawableLeft="@drawable/calendericon"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginHorizontal="18dp" />

    <EditText
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="When does it start?"
        android:theme="@style/MyEditText"
        android:inputType="date"
        android:focusable="false"
        android:drawablePadding="12dp"
        android:maxLines="1"
        android:maxLength="100"
        android:drawableLeft="@drawable/timeicon"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginHorizontal="18dp" />
</android.support.constraint.ConstraintLayout>